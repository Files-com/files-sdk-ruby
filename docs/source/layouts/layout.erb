<% language_tabs = current_page.data.language_tabs || [] %>
<% page_content = yield %>
<%
  if current_page.data.includes
    current_page.data.includes.each do |include|
      page_content += partial("includes/#{include}")
    end
  end
%>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "API Documentation" %></title>
    <%= favicon_tag 'images/favicon.png' %>
    <link rel="stylesheet" href="https://use.typekit.net/cym0cmh.css">

    <style>
      <%= Rouge::Themes::MonokaiSublime.render(:scope => '.highlight') %>
    </style>
    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :print, media: :print %>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>

    <%= javascript_include_tag "brickftp_menu" %>
    <%= javascript_include_tag "toggle_buttons" %>
  </head>

  <body class="<%= page_classes %>" data-languages="<%=h language_tabs.map{ |lang| lang.is_a?(Hash) ? lang.keys.first : lang }.to_json %>">

<header>
  <input type="checkbox" class="show-menu" tabindex="-1">
  <nav role="navigation" class="">
    <div class="mobile-container">
      <a href="https://www.files.com/" name="headerLogoLink" id="headerLink" class="logo">
        <%= image_tag "logo.svg", class: 'logo' %>
      </a>
      <button id="mobileToggle" class="mobile-toggle">
        <%= image_tag "menu.svg" %>
      </button>
    </div>

    <ul class="nav-group">
      <li class="nav-item">
        <a href="https://www.files.com/pricing/" class="nav-anchor" tabindex="0">Pricing</a>
      </li>
      <li class="nav-item">
        <a href="https://www.files.com/docs/" class="nav-anchor" tabindex="0">Docs</a>
      </li>
      <li class="nav-item">
        <a href="https://developers.files.com/" class="nav-anchor" tabindex="0">API</a>
      </li>
    </ul>
    <ul class="nav-group">
      <li class="nav-item"><a href="https://files.com/signup" class="button button--primary button--small" id="signupLink"
          tabindex="0">Free Trial</a></li>
      <li class="nav-item"><a href="https://app.files.com/" class="button button--outline button--small"
          tabindex="0">Sign In</a></li>
    </ul>
  </nav>
</header>

